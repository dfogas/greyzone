@keyframes slideInLeft
  0%
    transform: translate3d(-100%, 0, 0)
    visibility: visible
  100%
    transform: translate3d(0, 0, 0)

@keyframes animatedBackground {
  from { opacity: 0 }
  to { opacity: 1 }
}

@keyframes rotateIn
  0%
    transform-origin: center
    transform: rotate3d(0, 0, 1, -200deg)
    opacity: 0
  100%
    transform-origin: center
    transform: none
    opacity: 1

@keyframes zoomIn
  0%
    opacity: 0
    transform: scale3d(.3, .3, .3)
  50%
    opacity: 1
