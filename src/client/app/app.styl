// Remember to use rems and ems. http//css-tricks.com/rems-ems.

@import '../../../node_modules/normalize.css/normalize.css'

// http//phonegap-tips.com/articles/essential-phonegap-css-webkit-tap-highlight-color.html
*
  -webkit-tap-highlight-color rgba(0,0,0,0)

// Goodness.
*, after, before
  box-sizing border-box
  -moz-box-sizing border-box
  -webkit-box-sizing border-box

html,
body
  height 100%
  background-image url('../../../assets/img/bg/blue_neopren.jpg')
  font-family 'Segoe UI', 'Lucida Grande','Ubuntu','sans-serif'
  font-size 16px
  line-height 1.5
  overflow hidden
  z-index -1001

ul
  display inline-block
  margin-left 0
  padding-left 0

ul li
  display inline-block

div
  display inline-block

label
  display block
  padding-left 15px
  text-indent -15px

  input
    width 13px
    height 13px
    padding 0
    margin 0
    vertical-align bottom
    position relative
    top -1px
    *overflow hidden

#app
  margin 1em 2em

  header
    position absolute
    height 30px
    text-align center
    top 0px
    width 1640px
    left 50%
    margin-left -820px
    background-color lightgray
    z-index 1000

  > header
    h4
      margin 0
      display inline-block

    ul
      margin 0
      padding 0
    ul
      li
        font-size 1em

  footer
    text-align center

  > footer
    font-size .75em
    font-style italic

  focus
    outline-style none

  a
    text-decoration none

    &hovernot(.active)
      text-decoration underline

    &.active
      font-weight bold

  button
    border-radius 1em
    font-weight bold
    line-height 1.8
    padding 0 1em

    &[disabled]
      opacity .5

    &hovernot(&[disabled])
      background-color #346392
      text-shadow -1px 1px #27496d

    &active
      background-color #27496d
      text-shadow -1px 1px #193047

  button
  input
  textarea
    &disabled
      opacity .5

  li
    max-width 42em
