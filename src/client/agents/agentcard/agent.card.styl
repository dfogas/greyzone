/*Basic Layout*/
.agent-card
  position relative
  list-style-type none
  height 144px
  width 260px
  left 2px
  margin-left 2px
  margin-right 2px
  border 1px solid white
  background-color black
  color silver
  z-index 1

.agent-exp-next
  position absolute
  color ghostwhite
  bottom 9px
  left 1px

/*Showcased Agent Card Layout*/
.showcased
  position absolute

.showcased.agent-card
  position absolute
  margin-top 0
  width 425px
  height 265px

.showcased.agent-stat-counter
  position absolute
  width 25px
  height 35px
  margin 20px
  margin-top 20px

.showcased.agent-stat-counter.operations
  top 10px

.showcased.agent-stat-counter.electronics
  top 85px

.showcased.agent-stat-counter.stealth
  top 160px

.showcased.agent-equipment-picture-placeholder
  width 60px
  height 60px
  border-top-left-radius 4px
  border-bottom-left-radius 4px
  /*background url('../../../assets/img/equipments/equipment_icon_256.png')*/
  background-size 100%
  background-repeat no-repeat

.showcased.agent-equipment-description-placeholder
  left 60px
  width 80px
  height 60px
  font-size 14px

/*Agent Rankup*/
.agent-rankup-button
  position absolute
  top 0
  right 0
  background rgba(0, 0, 0, 0.9)
  color white
  z-index 101

.save-agent-button
  position absolute
  color black
  top 0px
  left 0px
  z-index 1

.dismiss-agent-button
  position absolute
  top 0
  right 0
  color black
  z-index 1

#ActivateSelf
  position absolute
  top 0
  right 0
  color black
  font-size 1.2em
  color white
  right 10px
  z-index 11
  cursor pointer

#HideSelf
  position absolute
  top 0px
  right 0px
  color white
  top 20px
  right 120px
  cursor pointer
  font-size 1.1em
