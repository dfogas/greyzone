.dialog-box
  position absolute
  left -170px
  top 75px
  min-width 200px
  max-width 300px
  min-height 170px
  background honeydew
  border-radius 10px
  border 2px solid black
  padding 5px
  font-size 1.3em
  text-align center
  z-index 1001

.dialog-box:before
  content ""
  position absolute
  left 100%
  top 56px
  width 0
  height 0
  border-top 13px solid transparent
  border-left 39px solid red
  border-bottom 13px solid transparent

.dialog-box-to-talk
  position absolute
  width 85px
  height 40px
  bottom 0px
  left 0px

.dialog-box-close
  position absolute
  bottom 0px
  right 5px
  font-size 0.7em

.story-box-open
  position absolute
  bottom 0px
  left 5px
  font-size 0.7em
