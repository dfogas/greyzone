#MissionsListTable
  position absolute
  top 80px
  left 20px
  background rgba(0, 0, 0, 0.7)
  z-index 10
  animation zoomInUp 1s

  table
    text-align center
    width 350px
    border 3px solid white

    thead
      border 3px solid white

    th
      height 39px
      background-color darkred
      color white
      padding-left 5px
      padding-right 5px

    tr.selected
      background-color darkslategrey

    td
      color ghostwhite
      font-weight bold

      button
        background-color black

#MissionsListTable.animated
  animation zoomOutDown 1.5s

#MissionListTablePlaceholder
  background-color darkred
  color white
  padding-left 5px
  padding-right 5px
  font-size 1.5em
  text-align center
  width 350px
  border 3px solid white
  top 80px
  left 20px
  background rgba(0, 0, 0, 0.7)
  z-index 10
