#LogWindow
  position absolute
  width 1634px
  height 840px
  top 7px
  padding 10px
  border 1px solid whitesmoke
  overflow-x hidden
  overflox-y auto
  color whitesmoke
  font-weight bold
  background-color black
  background rgba(0, 0, 0, 0.8)
  animation animatedBackground 2s

.log-record
  display block

#ExportLogButton
  position absolute
  width 110px
  height 45px
  background-color black
  color ghostwhite
  bottom 175px
  right 10px
  font-size 0.9em

#SaveLogButton
  position absolute
  width 110px
  height 45px
  background-color silver
  color black
  bottom 65px
  right 10px

#LoadLogButton
  position absolute
  width 110px
  height 45px
  background-color blue
  color yellow
  bottom 120px
