.mission-talk
  position absolute
  left 200px
  top 100px
  width 1240px
  background-color darkcyan
  font-weight bold
  font-size 1.3em
  border 5px solid black
  border-radius 1em
  padding 20px

.mission-dialog
  width 1200px

.player-talk
  display block
  right 20px
  border 2px solid darkgrey
  border-radius 0.4em
  background-color yellow

  img
    float right

.agent-talk
  display block
  border 2px solid gold
  border-radius 0.4em
  background-color red
  width 600px

  img
    float left
