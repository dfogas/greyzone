@keyframes lefttorightshiftBackground {
  from { background-position: 1640px 0px }
  to { background-position: 0px 0px}
}

#ContestWindow
  position absolute
  height 860px
  width 1640px
  border-radius 0.5em
  background-image url('../../../../assets/img/bg/big_screen_day.jpg')
  background-repeat no-repeat
  font-weight bold
  animation lefttorightshiftBackground 1s ease-out

  table
    top 30px
    left 570px
    max-height 608px
    position absolute
    width 460px
    height 30px
    text-align center
    border-radius 10px
    animation animatedBackground 1.5s
    animation-delay 1.5s

  table, th, td
    border 1px solid black

  th
    height 39px
    color black

  td
    height 34px
    color ghostwhite
    background-color aliceblue
    background rgba(0, 0, 0, 0.7)

  #RefreshContestButton
    position absolute
    color black
    background-color gold
    bottom 0px
    right 540px
