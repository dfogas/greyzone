#AgentsWindow
  position absolute
  top 150px
  height 290px
  width 999px
  background-image url('../../../../assets/img/bg/smooth_metal.jpg')

  #AgentsWindowMessage
    border 1px solid white
    color white
    font-weight bold
    position absolute
    top 205px
    text-align center
    width 295px
    height 55px
    left 545px
    border-radius 0.5em

  #AgentsList
    position absolute
    top 5px
    width 680px
    left 15px

    table
      border 1px solid white

      tr
        border 1px solid white
        font-size 1em

        td
          padding 3px

          button
            font-size 0.8em
            padding 0 0.8em
            max-height 24px

.no-agent-for-hire
  position relative
  height 144px
  width 260px
  margin-right 5px
  border 2px solid darkblue
  background-color aliceblue
  display flex
  align-items center
  justify-content center
  opacity 0.7
  z-index 1

#AgentShiftLeft
  position absolute
  right 430px
  top 50px
  width 0
  height 0
  border-top 30px solid transparent
  border-right 45px solid black
  border-bottom 30px solid transparent

#AgentShiftRight
  position absolute
  right 100px
  top 50px
  width 0
  height 0
  border-top 30px solid transparent
  border-left 45px solid black
  border-bottom 30px solid transparent
