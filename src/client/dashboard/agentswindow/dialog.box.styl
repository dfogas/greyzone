.dialog-box
  left -80px
  top 55px
  width 180px
  height 150px
  background red
  position absolute
  border-radius 10px
  z-index 1001

.dialog-box:before
  content ""
  position absolute
  left 100%
  top 56px
  width 0
  height 0
  border-top 13px solid transparent
  border-left 39px solid red
  border-bottom 13px solid transparent

.dialog-box-to-talk
  position absolute
  width 60px
  height 30px
  bottom 0px
  left 0px

.dialog-box-close
  position absolute
  width 70px
  height 30px
  bottom 0px
  right 0px
