.equipment-stock-item
  position absolute
  border 1px solid black
  left 50px
  width 80px
  height 80px
  background url('../../../assets/img/equipments/equipment_icon_256.png')
  background-size 100% 100%
  background-repeat no-repeat
  opacity 0.5

.equipment-stock-item.available
  opacity 1

