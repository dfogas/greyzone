/*.equipment-stock*/
.equipment-stock
  position absolute
  top 480px
  width 270px
  height 320px
  color silver

.equipment-count
  position absolute
  padding-left 5px
  width 20px
  height 30px
  background-color black
  left 50px
  top 50px
  color white
  font-weight bold
  font-size 1.2em

.equipment-stock.operations
  left 140px

.equipment-stock.electronics
  left 530px

.equipment-stock.stealth
  left 920px

.equipment-item
  position absolute
  left 10px
  width 230px
  height 80px

.heavy-equipment-tag
  position absolute
