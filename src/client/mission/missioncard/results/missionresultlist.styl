.mission-result-list
  display flex
  flex-direction row
  flex-wrap wrap
  align-items center
  justify-content center
  position absolute
  margin 0
  padding 0
  color grey
  background-color black
  // background-image url('../../../../../assets/img/bg/scratched_metal.jpg')

.mission-result-list.loss
  background-color black
  color ghostwhite
  box-shadow 0 0 10px lightgrey inset
  padding 5px

.mission-result-list.reward
  background-color lightgrey
  color black
  box-shadow 0 0 10px black inset
  padding 5px

.mission-result-list.task
  font-size 1.5em

.mission-result-list.loss.task
  bottom 0px

.mission-result-list.reward.task
  bottom 105px

.mission-result-list.actual
  font-size 1.2em

.mission-result-list.loss.actual
  position absolute
  left 0px
  bottom 0px
  width 274px
  height 75px

.mission-result-list.reward.actual
  position absolute
  right 0px
  bottom 0px
  width 274px
  height 75px
