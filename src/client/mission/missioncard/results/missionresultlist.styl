.mission-result-list
  display flex
  flex-direction row
  flex-wrap wrap
  align-items center
  justify-content center
  position absolute
  margin 0
  padding 0

.mission-result.loss
  background-color silver
  box-shadow 0 0 10px black inset

.mission-result.reward
  background-color gold
  box-shadow 0 0 10px red inset

.mission-result-list.task
  font-size 1.5em

.mission-result-list.loss.task
  bottom 0px

.mission-result-list.reward.task
  bottom 105px

.mission-result-list.actual
  font-size 1.2em

.mission-result-list.loss.actual
  position absolute
  left 0px
  bottom 0px
  width 274px
  height 75px

.mission-result-list.reward.actual
  position absolute
  right 0px
  bottom 0px
  width 274px
  height 75px
