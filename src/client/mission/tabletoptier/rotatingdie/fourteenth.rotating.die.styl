#Dice13.rotating-die {
  // position: absolute;
  width: 100px;
  height: 100px;
  // margin: 100px;
  transform-style: preserve-3d;
  animation: spin 25s infinite linear;
}
#Dice13.rotating-die .cover, #Dice13.rotating-die .inner {
  background: #101010;
  box-shadow: none;
}
#Dice13.rotating-die .cover {
  border-radius: 0;
  transform: translateZ(0px);
}
#Dice13.rotating-die .cover.x {
  transform: rotateY(90deg);
}
#Dice13.rotating-die .cover.z {
  transform: rotateX(90deg);
}
#Dice13.rotating-die .front  {
  transform: translateZ(50px);
}
#Dice13.rotating-die .front.inner  {
  transform: translateZ(49px);
}
#Dice13.rotating-die .back {
  transform: rotateX(-180deg) translateZ(50px);
}
#Dice13.rotating-die .back.inner {
  transform: rotateX(-180deg) translateZ(49px);
}
#Dice13.rotating-die .right {
  transform: rotateY(90deg) translateZ(50px);
}
#Dice13.rotating-die .right.inner {
  transform: rotateY(90deg) translateZ(49px);
}
#Dice13.rotating-die .left {
  transform: rotateY(-90deg) translateZ(50px);
}
#Dice13.rotating-die .left.inner {
  transform: rotateY(-90deg) translateZ(49px);
}
#Dice13.rotating-die .top {
  transform: rotateX(90deg) translateZ(50px);
}
#Dice13.rotating-die .top.inner {
  transform: rotateX(90deg) translateZ(49px);
}
#Dice13.rotating-die .bottom {
  transform: rotateX(-90deg) translateZ(50px);
}
#Dice13.rotating-die .bottom.inner {
  transform: rotateX(-90deg) translateZ(49px);
}
